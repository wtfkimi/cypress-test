{
	"compilerOptions": {
		"target": "es5",
		"lib": ["es5", "dom"],
		"types": ["cypress", "node", "@shelex/cypress-allure-plugin"],
		"paths": {
			"*": ["./cypress/*"]
		},
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules", "dist"],
	"include": [
		"../../node_modules/cypress",
		"cypress/**/*.ts",
		"node_modules/cypress/types/index.d.ts"
	]
}
